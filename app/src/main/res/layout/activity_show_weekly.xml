<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ourincheon.wazap.showWeeklyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_title_banner"
        android:padding="1dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/jBefore"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:background="@drawable/detail_btn_back"
            android:layout_marginLeft="16.47dp"
            android:layout_marginTop="13dp" />

        <com.ourincheon.wazap.NotoTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/jPick"
            android:layout_width="26.67dp"
            android:layout_height="24.67dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="11.67dp"
            android:background="@drawable/heart1"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F3F3"
        android:layout_below="@id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="9dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/sDday"
                        android:layout_toStartOf="@+id/sDday">

                        <com.ourincheon.wazap.NotoTextView
                            android:id="@+id/sTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="title"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/sDday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dday"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="5dp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f3f3"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="9dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center">

                        <com.ourincheon.wazap.NotoTextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분야" />
                    </LinearLayout>

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/sCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/sTitle"
                        android:text="category"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <com.ourincheon.wazap.NotoTextView
                            android:id="@+id/textView31"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="주최/주관"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/sHost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/sCategory"
                        android:text="host" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp">

                        <com.ourincheon.wazap.NotoTextView
                            android:id="@+id/textView32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="기간" />
                    </LinearLayout>

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/sPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/sHost"
                        android:text="period" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp">

                        <com.ourincheon.wazap.NotoTextView
                            android:id="@+id/textView34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대상" />
                    </LinearLayout>

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/sTarget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/sPeriod"
                        android:text="target" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp">

                        <com.ourincheon.wazap.NotoTextView
                            android:id="@+id/textView35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="특전" />
                    </LinearLayout>

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/sBenefit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/sTarget"
                        android:text="benefit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp">

                        <com.ourincheon.wazap.NotoTextView
                            android:id="@+id/textView37"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="총 시상금 범위" />
                    </LinearLayout>

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/sTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="total" />

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/sPrize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="first" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp">

                        <com.ourincheon.wazap.NotoTextView
                            android:id="@+id/textView36"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="홈페이지" />
                    </LinearLayout>

                    <com.ourincheon.wazap.NotoTextView
                        android:id="@+id/sHomepage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="homepage" />

                </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/sImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
